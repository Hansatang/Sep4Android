<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?colorSecondary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Spinner
                android:id="@+id/sp"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:backgroundTint="?colorPrimary"
                android:contentDescription="@string/spinner"
                android:dropDownVerticalOffset="0dp"
                android:overlapAnchor="false"
                android:spinnerMode="dropdown" />
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/tempCardViewGraph"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="5dp"
            android:elevation="10dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
            tools:layout_editor_absoluteX="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="Average Temperature per Day"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <org.eazegraph.lib.charts.BarChart
                    android:id="@+id/tempBarchart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    app:egBarWidth="10dp"
                    app:egFixedBarWidth="true"
                    app:egLegendTextSize="10sp"
                    app:egLegendHeight="40dp"
                    app:egVisibleBars="7" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/humidityCardViewGraph"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="5dp"
            android:elevation="10dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
            tools:layout_editor_absoluteX="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Average Humidity per Day"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <org.eazegraph.lib.charts.BarChart
                    android:id="@+id/humidityBarchart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    app:egBarWidth="20dp"
                    app:egFixedBarWidth="true"
                    app:egLegendHeight="40dp"
                    app:egVisibleBars="4" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/co2CardViewGraph"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="5dp"
            android:elevation="10dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
            tools:layout_editor_absoluteX="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Average Co2 per Day"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <org.eazegraph.lib.charts.BarChart
                    android:id="@+id/co2Barchart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    app:egBarWidth="20dp"
                    app:egFixedBarWidth="true"
                    app:egLegendHeight="40dp"
                    app:egVisibleBars="4" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>